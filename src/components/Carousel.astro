---
import "swiper/css";
import { Icon } from "astro-icon/components";
---

<div class="swiper col-span-full! my-8 max-w-screen!">
  <div class="mx-auto mb-4 flex w-fit items-center gap-2">
    <Icon
      name="ri:arrow-left-s-line"
      class="swiper-button-prev cursor-pointer text-zinc-300 transition hover:scale-140"
      size={32}
    />
    <div class="swiper-pagination flex"></div>
    <Icon
      name="ri:arrow-right-s-line"
      class="swiper-button-next cursor-pointer text-zinc-300 transition hover:scale-140"
      size={32}
    />
  </div>
  <div class="swiper-wrapper max-w-screen!">
    <slot />
  </div>
</div>

<style is:global>
  .swiper-button-disabled {
    color: var(--color-zinc-100);
    scale: 1;
    cursor: not-allowed;
  }

  /* Pagination bullets - larger clickable area with transparent background */
  .swiper-pagination .swiper-pagination-bullet {
    width: auto;
    height: auto;
    margin: 0 !important;
    padding: 20px;
    background: transparent;
    opacity: 1;
    cursor: pointer;
    position: relative;
    border-radius: 0;
  }

  /* The visible dot inside the clickable area */
  .swiper-pagination .swiper-pagination-bullet::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: var(--color-zinc-300);
    transition: all 0.3s ease;
  }

  /* Hover effect - grow the dot */
  .swiper-pagination .swiper-pagination-bullet:hover::before {
    width: 14px;
    height: 14px;
  }

  /* Active bullet - bigger size and active color */
  .swiper-pagination .swiper-pagination-bullet-active::before {
    width: 14px;
    height: 14px;
    background-color: var(--color-orange-300);
  }
</style>

<script>
  import Swiper from "swiper";
  import { Navigation, Pagination } from "swiper/modules";

  new Swiper(".swiper", {
    modules: [Navigation, Pagination],
    cssMode: true,
    spaceBetween: 16,
    // slidesPerView: "auto",
    slidesPerView: 2,
    slidesOffsetAfter: 24,
    slidesOffsetBefore: 24,
    // slidesPerGroup: 1,
    watchOverflow: true,
    centeredSlides: true,
    // centerInsufficientSlides: true,
    centeredSlidesBounds: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      addIcons: false,
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
</script>
