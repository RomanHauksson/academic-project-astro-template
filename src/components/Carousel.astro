---
import "swiper/css";
import { Icon } from "astro-icon/components";
---

<div class="swiper my-8 max-w-screen! w-full">
  <div class="w-fit mx-auto flex items-center gap-2 mb-4">
    <Icon
      name="ri:arrow-left-s-line"
      class="swiper-button-prev cursor-pointer hover:scale-140 transition text-zinc-300"
      size={32}
    />
    <div class="swiper-pagination flex"></div>
    <Icon
      name="ri:arrow-right-s-line"
      class="swiper-button-next cursor-pointer hover:scale-140 transition text-zinc-300"
      size={32}
    />
  </div>
  <div class="swiper-wrapper max-w-screen!">
    <slot />
  </div>
</div>

<style is:global>
  .swiper-button-disabled {
    color: var(--color-zinc-100);
    scale: 1;
    cursor: not-allowed;
  }

  /* Pagination bullets - larger clickable area with transparent background */
  .swiper-pagination .swiper-pagination-bullet {
    width: auto;
    height: auto;
    margin: 0 !important;
    padding: 20px;
    background: transparent;
    opacity: 1;
    cursor: pointer;
    position: relative;
    border-radius: 0;
  }

  /* The visible dot inside the clickable area */
  .swiper-pagination .swiper-pagination-bullet::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: var(--color-zinc-300);
    transition: all 0.3s ease;
  }

  /* Hover effect - grow the dot */
  .swiper-pagination .swiper-pagination-bullet:hover::before {
    width: 14px;
    height: 14px;
  }

  /* Active bullet - bigger size and active color */
  .swiper-pagination .swiper-pagination-bullet-active::before {
    width: 14px;
    height: 14px;
    background-color: var(--color-orange-300);
  }
</style>

<script>
  import Swiper from "swiper";
  import { Navigation, Pagination } from "swiper/modules";

  new Swiper(".swiper", {
    modules: [Navigation, Pagination],
    cssMode: true,
    spaceBetween: 16,
    slidesPerView: 2,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      addIcons: false,
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints: {
      "@0.00": {
        slidesPerView: 1,
        spaceBetween: 10,
      },
      "@0.75": {
        slidesPerView: 2,
        spaceBetween: 20,
      },
      "@1.00": {
        slidesPerView: 3,
        spaceBetween: 40,
      },
      "@1.50": {
        slidesPerView: 4,
        spaceBetween: 50,
      },
    },
  });
</script>
